<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/darkyellow</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:editTextColor">@color/yellow</item>
        <item name="android:buttonStyle">@style/ButtonStyleForDark</item>
        <item name="fontFamily">@font/margarine</item>
        <item name="font">@font/margarine</item>
        <item name="android:windowBackground">@drawable/gradient</item>
        <item name="spinnerStyle">@style/SpinnerStyleForDark</item>
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/purple</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:editTextColor">@color/blue</item>
        <item name="android:buttonStyle">@style/ButtonStyleForLight</item>
        <item name="fontFamily">@font/margarine</item>
        <item name="font">@font/margarine</item>
        <item name="android:windowBackground">@drawable/gradient_yellow</item>
        <item name="spinnerStyle">@style/SpinnerStyleForLight</item>
    </style>

    <style name="ButtonStyleForDark" parent="Widget.AppCompat.Button">
        <item name = "android:textColor">@color/blue</item>
        <item name = "android:background">@drawable/rounded_button_dark</item>
    </style>

    <style name="ButtonStyleForLight" parent="Widget.AppCompat.Button">
        <item name = "android:textColor">@color/yellow</item>
        <item name = "android:background">@drawable/rounded_button_light</item>
    </style>

    <style name="SpinnerStyleForDark" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_for_dark</item>
        <item name="android:popupBackground">@drawable/spinner_for_dark</item>

        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="SpinnerStyleForLight" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_for_light</item>
        <item name="android:popupBackground">@drawable/spinner_for_light</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

</resources>
