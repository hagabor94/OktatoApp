<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#59006b</item>
        <item name="colorPrimaryDark">#111462</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@drawable/gradient</item>
        <item name="android:textColorHint">#cca700</item>
        <item name="android:textColor">#ffd100</item>
        <item name="android:buttonStyle">@style/ButtonStyleForDark</item>
        <item name="fontFamily">@font/margarine</item>
        <item name="font">@font/margarine</item>
        <item name="android:popupBackground">@drawable/rounded_button_yellow</item>
        <item name="android:editTextColor">#ffd100</item>
    </style>

    <style name="ButtonStyleForDark" >
        <item name = "android:textColor">#111462</item>
        <item name = "android:background"> @drawable/rounded_button_yellow</item>
    </style>
    
    <style name="TextViewStyle">
    </style>
</resources>
